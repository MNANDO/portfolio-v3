---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { formatDate } from "../../lib/utils";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<BaseLayout title={`${post.data.title} â€” Michael Fernando`} description={post.data.description}>
  <article class="space-y-8">
    <header class="space-y-2">
      <a href="/blog" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
        &larr; Back to blog
      </a>
      <h1 class="text-3xl font-bold tracking-tight">{post.data.title}</h1>
      <time class="block text-sm text-muted-foreground" datetime={post.data.date.toISOString()}>
        {formatDate(post.data.date)}
      </time>
      {post.data.tags.length > 0 && (
        <div class="flex gap-2">
          {post.data.tags.map((tag: string) => (
            <span class="rounded-full bg-muted px-2.5 py-0.5 text-xs text-muted-foreground">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <div set:html={post.body} />
  </article>
</BaseLayout>
